<UserControl x:Class="TPW_Project.View.Controls.SubmitButtonWithInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TPW_Project.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="34" d:DesignWidth="250">
    <Grid Width="250" Height="30" Background="White">
        <TextBox VerticalAlignment="Center" Foreground="Black" FontSize="16"
                 Background="Transparent" BorderThickness="3" Height="30"
                 Text="{Binding SubmitInputText,  UpdateSourceTrigger = PropertyChanged}" PreviewTextInput="TextBox_PreviewTextInput"/>
        
        <TextBlock VerticalAlignment="Center" Foreground="LightGray"
                   Visibility="{Binding SubmitBasicTextVisibility}" 
                   Text="Enter the number of balls:" Margin="3 0" FontSize="16" Panel.ZIndex="-1"/>
        
        <Button  Content="Submit" Background="Transparent"
                BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Center"
                Margin="3 0" FontSize="16" Foreground="Black" Command="{Binding SubmitButton}"/>
    </Grid>
</UserControl>
